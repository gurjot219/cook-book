<h2>Search Recipe</h2>

<%= form_tag recipes_path, method: "get" do %>
  <%= label_tag "Cuisine"%>
  <%= text_field_tag :cuisine, params[:cuisine]%>
  <%= label_tag "Ingredient"%>

  <%= text_field_tag :ingredient, params[:ingredient]%>

  <%= button_tag "Search"%>
<%end%>


<h2>Recipes</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Cuisine</th>
    <th>Cooking time</th>
    <th>Ingredients</th>
  </tr>
  <% @recipies.each do |recipe| %>
    <tr>
      <td><%= recipe.name%></td>
      <td> <%= recipe.cuisine %></td>
      <td><%= recipe.cooking_time%> min </td>
      <td><%= recipe.ingredients.map(&:name).join( ", " )%></td>
    </tr>

  <% end %>


</table>
